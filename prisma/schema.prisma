generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model PersonalInfo {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  bio         String
  description String
}

model Project {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  description String
  link        String
}

model Skill {
  id   String @id @default(auto()) @map("_id") @db.ObjectId
  name String @unique
}

model Cv {
  id   String @id @default(auto()) @map("_id") @db.ObjectId
  name String 
  url String
}